pipeline {
    agent any
     triggers{
        pollSCM('H * * * *')
    }
    
    tools{
            maven 'maven-3'
            jdk 'java11'
    }
    
    stages {
        stage('Maven-Clean'){
            steps{
                bat 'mvn clean'
            }
        }
        stage('Maven-Compile'){
            steps{
                bat 'mvn compile'
            }
        }
        stage('Maven-test'){
            steps{
                bat 'mvn test'
            }
        }
        stage('Maven-Package'){
            steps{
                bat 'mvn package'
            }
        }
         stage('build && SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    
                        bat 'mvn package sonar:sonar'
			 //sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar'
                    
                }
            }
        }
    }
    
     post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                    archiveArtifacts 'target/*.jar'
                       }
         
            }
}

